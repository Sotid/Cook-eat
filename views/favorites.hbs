
<div id="favorites-container">
   <div class="myfavorites">
    <h1>Favorite Recipes</h1>
   {{#each faved}}
   <div class="recipe-container">
     <h3>{{this.name}}</h3>
   <a href="/recipes/{{this._id}}"><img class="recipe-img" src="{{this.imageURL}}"></a>
   <form action='/private/favorites/{{this._id}}/delete-fav' method='POST'>
   <button type="submit" class="transparent-btn" name="delete-fav"><img class="trash" src="/images/trash2.png"></button>
     </form>
    </div>
    {{/each}}
</div>
<form action="/private/favorites/create" method='GET'>
   <button id="addNew">Add a new recipe</button>
</form>
<div class="myrecipes">
    <h1>My created recipes</h1>
         {{#each created}}
        <div class="recipe-container">
      <h3>{{this.name}}</h3>
<a href="/recipes/{{this._id}}"><img class="recipe-img" src="{{this.imageURL}}"></a>
<form action='/private/favorites/{{this._id}}/delete-mine' method='POST'>
   <button type="submit" class="transparent-btn" name="delete-mine"><img class="trash" src="/images/trash2.png"></button>
</form>
   </div>
{{/each}}
  </div>
</div>